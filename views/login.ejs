<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', {title: 'Log in' }) %>
        <script src="javascripts/login.js"></script>
</head>

<body class="container">

    <header>
        <%- include('partials/header') %>
    </header>

    <main>
        <div class="d-flex justify-content-center text-danger" id="errorField"></div>
        <div class="d-flex justify-content-center">
            <form id="login">
                <label for="uid">User ID</label><br>
                <input id="uid" class="form-control" type="email" placeholder="Enter email"><br>
                <label for="pass">Password</label><br>
                <input id="pass" class="form-control" type="password" placeholder="Password"><br>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-primary">Log in</button>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <%- include('partials/footer') %>
    </footer>

</body>

</html>