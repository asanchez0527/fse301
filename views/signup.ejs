<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', {title: 'Register' }) %>
        <script src="javascripts/signup.js"></script>
</head>

<body class="container">

    <header>
        <%- include('partials/header') %>
    </header>

    <main>
        <div class="d-flex justify-content-center text-danger" id="errorField"></div>
        <div class="d-flex justify-content-center">
            <form id="register">
                <label for="uid">Email</label><br>
                <input id="uid" class="form-control" type="email"><br>
                <label for="pass">Password</label><br>
                <input id="pass" class="form-control" type="password"><br>
                <label for="passconf">Confirm password</label><br>
                <input id="passconf" class="form-control" type="password"><br>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-primary">Register</button>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <%- include('partials/footer') %>
    </footer>

</body>

</html>